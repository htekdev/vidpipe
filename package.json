{
  "name": "vidpipe",
  "version": "1.0.0",
  "description": "AI-powered pipeline that watches for video recordings and generates transcripts, summaries, short clips, and social media posts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "vidpipe": "./dist/index.js"
  },
  "files": [
    "dist",
    "!dist/__tests__",
    "assets/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "tsx src/index.ts",
    "build": "tsc && node -e \"const fs=require('fs');const f='dist/index.js';const c=fs.readFileSync(f,'utf8');if(!c.startsWith('#!')){fs.writeFileSync(f,'#!/usr/bin/env node\\n'+c)}\"",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --testPathPattern=integration",
    "test:unit": "vitest run --testPathPattern='__tests__/(?!integration)'"
  },
  "keywords": [
    "video",
    "transcription",
    "ai",
    "notes",
    "copilot"
  ],
  "author": "htekdev",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/htekdev/vidpipe.git"
  },
  "type": "module",
  "dependencies": {
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@github/copilot-sdk": "^0.1.23",
    "chokidar": "^5.0.0",
    "commander": "^14.0.3",
    "dotenv": "^17.2.4",
    "exa-js": "^2.3.0",
    "ffmpeg-static": "^5.3.0",
    "fluent-ffmpeg": "^2.1.3",
    "openai": "^6.18.0",
    "sharp": "^0.34.5",
    "slugify": "^1.6.6",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/node": "^25.2.1",
    "@types/sharp": "^0.31.1",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "tsx": "^4.21.0",
    "vitest": "^4.0.18"
  }
}
