{
  "name": "vidpipe",
  "version": "1.3.0",
  "description": "AI-powered pipeline that watches for video recordings and generates transcripts, summaries, short clips, and social media posts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "vidpipe": "./dist/index.js"
  },
  "files": [
    "dist",
    "!dist/__tests__",
    "assets/fonts/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "tsx src/index.ts",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run src/__tests__/integration/",
    "test:unit": "vitest run --exclude 'src/__tests__/integration/**'",
    "push": "tsx cicd/push.ts"
  },
  "keywords": [
    "video",
    "transcription",
    "ai",
    "notes",
    "copilot"
  ],
  "author": "htekdev",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/htekdev/vidpipe.git"
  },
  "type": "module",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@github/copilot-sdk": "^0.1.23",
    "@google/genai": "^1.41.0",
    "chokidar": "^5.0.0",
    "commander": "^14.0.3",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "fluent-ffmpeg": "^2.1.3",
    "onnxruntime-node": "^1.24.1",
    "open": "^11.0.0",
    "openai": "^6.18.0",
    "sharp": "^0.34.5",
    "slugify": "^1.6.6",
    "tmp": "^0.2.5",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/node": "^25.2.1",
    "@types/sharp": "^0.32.0",
    "@types/supertest": "^6.0.3",
    "@types/tmp": "^0.2.6",
    "@types/uuid": "^11.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "supertest": "^7.2.2",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "vitest": "^4.0.18"
  },
  "optionalDependencies": {
    "ffmpeg-static": "^5.3.0"
  }
}
