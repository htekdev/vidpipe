{
  "version": 1,
  "hooks": {
    "preToolUse": [
      {
        "type": "command",
        "bash": ".github/hooks/pre-push-tests.sh",
        "powershell": ".github/hooks/pre-push-tests.ps1",
        "cwd": ".",
        "timeoutSec": 120,
        "comment": "Run tests and coverage checks before git push"
      },
      {
        "type": "command",
        "bash": ".github/hooks/pre-push-review-check.sh",
        "powershell": ".github/hooks/pre-push-review-check.ps1",
        "cwd": ".",
        "timeoutSec": 10,
        "comment": "Ensure code has been reviewed before git push (checks .github/review.json)"
      }
    ],
    "postToolUse": [
      {
        "type": "command",
        "bash": ".github/hooks/post-push-review.sh",
        "powershell": ".github/hooks/post-push-review.ps1",
        "cwd": ".",
        "timeoutSec": 300,
        "comment": "After git push, wait for Copilot code review and prompt review-triage"
      }
    ]
  }
}
