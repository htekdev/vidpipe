{
  "hooks": {
    "PreToolUse": [
      {
        "type": "command",
        "command": ".github/hooks/pre-push-block.sh",
        "windows": "powershell -File .github\\hooks\\pre-push-block.ps1",
        "timeout": 5
      },
      {
        "type": "command",
        "command": ".github/hooks/pre-amend-block.sh",
        "windows": "powershell -File .github\\hooks\\pre-amend-block.ps1",
        "timeout": 5
      },
      {
        "type": "command",
        "command": ".github/hooks/pre-force-push-block.sh",
        "windows": "powershell -File .github\\hooks\\pre-force-push-block.ps1",
        "timeout": 5
      },
      {
        "type": "command",
        "command": ".github/hooks/pre-import-ban.sh",
        "windows": "powershell -File .github\\hooks\\pre-import-ban.ps1",
        "timeout": 5
      }
    ],
    "PostToolUse": [
      {
        "type": "command",
        "command": ".github/hooks/post-edit-invalidate.sh",
        "windows": "powershell -File .github\\hooks\\post-edit-invalidate.ps1",
        "timeout": 5
      }
    ]
  }
}
